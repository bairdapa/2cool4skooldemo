<div class="container">
	<div class="create_review_title">
		<h1 class="create_review_title">Create School</h1>
	</div>

	<div class="create_school_form">
		<a class="normal_text">Name</a>
		<input type="text" id="create_school_name"><br><br>

		<label for="world" class="normal_text">World</label>
		<select name="world" id="create_school_world">
			{{#each worlds}}
				<option value="{{worldId}}">{{worldName}}</option>
			{{/each}}
			<option value="null">- None -</option>
			<option value="new">- Create New World -</option>
		</select>
		<input id="newworldtext" type="text" placeholder="new world" style="display:none;">
		<br><br>

		<a class="normal_text">Picture URL</a>
		<input type="text" id="create_school_pic"><br><br>

		<button id="create_school_submit">Create School</button>
	</div>



</div>
